{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "popomomo",
  "version": "0.1.0",
  "identifier": "com.nono.popomomo",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Popomomo Timer",
        "width": 450,
        "height": 700,
        "resizable": false,
        "center": true,
        "visible": true,
        "decorations": true,
        "transparent": false,
        "closable": true,
        "hiddenTitle": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
